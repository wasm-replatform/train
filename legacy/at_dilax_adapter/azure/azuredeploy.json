{
    "variables": {
        "hybridConnectionResourceId": "[resourceId(parameters('hybrid_resource_group'), 'Microsoft.Relay/namespaces', parameters('hybrid_service_bus_namespace'))]"
    },
    "resources": [
        {
            "type": "Microsoft.KeyVault/vaults/accessPolicies",
            "name": "[concat(parameters('key_vault'), '/add')]",
            "apiVersion": "2016-10-01",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites/', parameters('site_name'))]",
                "[resourceId('Microsoft.Web/sites/slots', parameters('site_name'), parameters('slot_name'))]"
            ],
            "properties": {
                "accessPolicies": [
                    {
                        "tenantId": "[reference(concat('Microsoft.Web/sites/', parameters('site_name')), '2018-02-01', 'Full').identity.tenantId]",
                        "objectId": "[reference(concat('Microsoft.Web/sites/', parameters('site_name')), '2018-02-01', 'Full').identity.principalId]",
                        "permissions": {
                            "keys": [],
                            "secrets": ["get"],
                            "certificates": [],
                            "storage": []
                        }
                    },
                    {
                        "tenantId": "[reference(concat('Microsoft.Web/sites/', parameters('site_name'), '/slots/', parameters('slot_name')), '2018-02-01', 'Full').identity.tenantId]",
                        "objectId": "[reference(concat('Microsoft.Web/sites/', parameters('site_name'), '/slots/', parameters('slot_name')), '2018-02-01', 'Full').identity.principalId]",
                        "permissions": {
                            "keys": [],
                            "secrets": ["get"],
                            "certificates": [],
                            "storage": []
                        }
                    }
                ]
            }
        },
        {
            "name": "[parameters('site_name')]",
            "type": "Microsoft.Web/sites",
            "apiVersion": "2016-08-01",
            "location": "[resourceGroup().location]",
            "scale": null,
            "properties": {
                "name": "[parameters('site_name')]",
                "serverFarmId": "[parameters('server_farm_id')]"
            },
            "identity": {
                "type": "SystemAssigned"
            },
            "kind": "app",
            "resources": [
                {
                    "apiVersion": "2019-08-01",
                    "name": "virtualNetwork",
                    "type": "networkConfig",
                    "condition": "[greater(length(parameters('vnet_resource_group')), 0)]",
                    "dependsOn": ["[resourceId('Microsoft.Web/sites', parameters('site_name'))]"],
                    "properties": {
                        "subnetResourceId": "[resourceId(parameters('vnet_resource_group'), 'Microsoft.Network/virtualNetworks/subnets', parameters('vnet_name'), parameters('subnet_name'))]",
                        "swiftSupported": true
                    }
                },
                {
                    "apiVersion": "2015-08-01",
                    "name": "slotconfignames",
                    "type": "config",
                    "dependsOn": ["[resourceId('Microsoft.Web/sites/', parameters('site_name'))]"],
                    "properties": {
                        "appSettingNames": ["IS_SLOT"]
                    }
                },
                {
                    "comments": "[concat('Deployment slot ', parameters('slot_name'))]",
                    "type": "Microsoft.Web/sites/slots",
                    "kind": "app",
                    "name": "[concat(parameters('site_name'), '/', parameters('slot_name'))]",
                    "apiVersion": "2016-08-01",
                    "location": "[resourceGroup().location]",
                    "scale": null,
                    "identity": {
                        "type": "SystemAssigned"
                    },
                    "properties": {
                        "enabled": true,
                        "hostNameSslStates": [
                            {
                                "name": "[concat(parameters('site_name'),'-', parameters('slot_name'),'.azurewebsites.net')]",
                                "sslState": "Disabled",
                                "virtualIP": null,
                                "thumbprint": null,
                                "toUpdate": null,
                                "hostType": "Standard"
                            },
                            {
                                "name": "[concat(parameters('site_name'),'-', parameters('slot_name'),'.scm.azurewebsites.net')]",
                                "sslState": "Disabled",
                                "virtualIP": null,
                                "thumbprint": null,
                                "toUpdate": null,
                                "hostType": "Repository"
                            }
                        ],
                        "serverFarmId": "[parameters('server_farm_id')]",
                        "hostingEnvironmentProfile": null,
                        "reserved": false,
                        "scmSiteAlsoStopped": false,
                        "clientAffinityEnabled": false,
                        "clientCertEnabled": false,
                        "hostNamesDisabled": false,
                        "containerSize": 0,
                        "dailyMemoryTimeQuota": 0,
                        "cloningInfo": null,
                        "httpsOnly": true,
                        "siteConfig": {
                            "minTlsVersion": "1.2",
                            "use32BitWorkerProcess": false,
                            "alwaysOn": true,
                            "healthCheckPath": "/status",
                            "appSettings": [
                                {
                                    "name": "APP_NAME",
                                    "value": "[parameters('site_name')]"
                                },
                                {
                                    "name": "IS_SLOT",
                                    "value": "true"
                                },
                                {
                                    "name": "WEBSITE_NODE_DEFAULT_VERSION",
                                    "value": "[parameters('node_version')]"
                                },
                                {
                                    "name": "WEBSITE_HEALTHCHECK_MAXPINGFAILURES",
                                    "value": "10"
                                },
                                {
                                    "name": "LOG_LEVEL",
                                    "value": "[parameters('log_level')]"
                                },
                                {
                                    "name": "FLEET_API_URL",
                                    "value": "[parameters('fleet_api_url')]"
                                },
                                {
                                    "name": "PAPERTRAIL_SYSTEM",
                                    "value": "[parameters('papertrail_system')]"
                                },
                                {
                                    "name": "NEW_RELIC_APP_NAME",
                                    "value": "[parameters('new_relic_app_name')]"
                                },
                                {
                                    "name": "NEW_RELIC_LICENSE_KEY",
                                    "value": "[parameters('new_relic_license_key')]"
                                },
                                {
                                    "name": "NEW_RELIC_LOG_ENABLED",
                                    "value": "false"
                                },
                                {
                                    "name": "RESET_COUNT_ON_TRIP_ENDED",
                                    "value": "[parameters('reset_count_on_trip_ended')]"
                                },
                                {
                                    "name": "REDIS_HOST",
                                    "value": "[concat(parameters('redis_name'),'.redis.cache.windows.net')]"
                                },
                                {
                                    "name": "REDIS_PORT",
                                    "value": "6379"
                                },
                                {
                                    "name": "REDIS_PASSWORD",
                                    "value": "[parameters('redis_password')]"
                                },
                                {
                                    "name": "REDIS_DB",
                                    "value": "0"
                                },
                                {
                                    "name": "DEPLOYMENT_ID",
                                    "value": "[parameters('deployment_id')]"
                                },
                                {
                                    "name": "DILAX_CONNECTION_LOST_THRESHOLD",
                                    "value": "[parameters('dilax_connection_lost_threshold')]"
                                },
                                {
                                    "name": "CC_STATIC_API_HOST",
                                    "value": "[parameters('cc_static_api_host')]"
                                },
                                {
                                    "name": "BLOCK_MGT_CLIENT_API_URL",
                                    "value": "[parameters('block_mgt_client_api_url')]"
                                },
                                {
                                    "name": "APP_MANIFEST_CLIENT_ID",
                                    "value": "[parameters('app_manifest_client_id')]"
                                },
                                {
                                    "name": "KEY_VAULT",
                                    "value": "[parameters('key_vault')]"
                                },
                                {
                                    "name": "KEY_VAULT_SECRET_NAME_SYSTEM_CLIENT_SECRET",
                                    "value": "[parameters('key_vault_secret_name_system_client_secret')]"
                                },
                                {
                                    "name": "KEY_VAULT_SECRET_NAME_CONFLUENT_KEY",
                                    "value": "[parameters('key_vault_secret_name_confluent_key')]"
                                },
                                {
                                    "name": "KEY_VAULT_SECRET_NAME_SCHEMA_REGISTRY_KEY",
                                    "value": "[parameters('key_vault_secret_name_schema_registry_key')]"
                                },
                                {
                                    "name": "GTFS_STATIC_URL",
                                    "value": "[parameters('gtfs_static_url')]"
                                },
                                {
                                    "name": "SECRET_WATCHER_INTERVAL",
                                    "value": "[parameters('secret_watcher_interval')]"
                                },
                                {
                                    "name": "KAFKA_ENVIRONMENT",
                                    "value": "[parameters('kafka_environment')]"
                                },
                                {
                                    "name": "KAFKA_HOSTS",
                                    "value": "[parameters('kafka_hosts')]"
                                },
                                {
                                    "name": "KAFKA_CONSUMER_GROUP",
                                    "value": "[parameters('kafka_consumer_group')]"
                                },
                                {
                                    "name": "SCHEMA_REGISTRY_URL",
                                    "value": "[parameters('schema_registry_url')]"
                                },
                                {
                                    "name": "USE_SCHEMA_REGISTRY_PRODUCER",
                                    "value": "[parameters('use_schema_registry_producer')]"
                                }
                            ]
                        }
                    },
                    "resources": [
                        {
                            "apiVersion": "2019-08-01",
                            "name": "virtualNetwork",
                            "type": "networkConfig",
                            "condition": "[greater(length(parameters('vnet_resource_group')), 0)]",
                            "dependsOn": ["[concat('Microsoft.Web/Sites/', parameters('site_name'), '/slots/', parameters('slot_name'))]"],
                            "properties": {
                                "subnetResourceId": "[resourceId(parameters('vnet_resource_group'), 'Microsoft.Network/virtualNetworks/subnets', parameters('vnet_name'), parameters('subnet_name'))]",
                                "swiftSupported": true
                            }
                        },
                        {
                            "condition": "[parameters('use_confluent_hybrid_connection')]",
                            "type": "hybridConnectionNamespaces/relays",
                            "name": "[if(parameters('use_confluent_hybrid_connection'), concat(parameters('hybrid_service_bus_namespace'), '/', parameters('hybrid_connection_relay_name_cluster')), 'namespace/relay')]",
                            "apiVersion": "2019-08-01",
                            "location": "[resourceGroup().location]",
                            "dependsOn": ["[concat('Microsoft.Web/Sites/', parameters('site_name'), '/slots/', parameters('slot_name'))]"],
                            "properties": {
                                "serviceBusNamespace": "parameters('hybrid_service_bus_namespace')",
                                "relayName": "parameters('hybrid_connection_relay_name_cluster')",
                                "relayArmUri": "[if(parameters('use_confluent_hybrid_connection'), concat(variables('hybridConnectionResourceId'), '/hybridConnections/', parameters('hybrid_connection_relay_name_cluster')), json('null'))]",
                                "hostname": "[if(parameters('use_confluent_hybrid_connection'), split(json(reference(concat(variables('hybridConnectionResourceId'), '/hybridConnections/', parameters('hybrid_connection_relay_name_cluster')), '2021-11-01').userMetadata)[0].value, ':')[0], json('null'))]",
                                "port": "[if(parameters('use_confluent_hybrid_connection'), split(json(reference(concat(variables('hybridConnectionResourceId'), '/hybridConnections/', parameters('hybrid_connection_relay_name_cluster')), '2021-11-01').userMetadata)[0].value, ':')[1], json('null'))]",
                                "sendKeyName": "defaultSender",
                                "sendKeyValue": "",
                                "serviceBusSuffix": ".servicebus.windows.net"
                            }
                        },
                        {
                            "condition": "[parameters('use_confluent_hybrid_connection')]",
                            "type": "hybridConnectionNamespaces/relays",
                            "name": "[if(parameters('use_confluent_hybrid_connection'), concat(parameters('hybrid_service_bus_namespace'), '/', parameters('hybrid_connection_relay_name_node1')), 'namespace/relay')]",
                            "apiVersion": "2019-08-01",
                            "location": "[resourceGroup().location]",
                            "dependsOn": ["[concat('Microsoft.Web/Sites/', parameters('site_name'), '/slots/', parameters('slot_name'))]"],
                            "properties": {
                                "serviceBusNamespace": "parameters('hybrid_service_bus_namespace')",
                                "relayName": "parameters('hybrid_connection_relay_name_cluster')",
                                "relayArmUri": "[if(parameters('use_confluent_hybrid_connection'), concat(variables('hybridConnectionResourceId'), '/hybridConnections/', parameters('hybrid_connection_relay_name_node1')), json('null'))]",
                                "hostname": "[if(parameters('use_confluent_hybrid_connection'), split(json(reference(concat(variables('hybridConnectionResourceId'), '/hybridConnections/', parameters('hybrid_connection_relay_name_node1')), '2021-11-01').userMetadata)[0].value, ':')[0], json('null'))]",
                                "port": "[if(parameters('use_confluent_hybrid_connection'), split(json(reference(concat(variables('hybridConnectionResourceId'), '/hybridConnections/', parameters('hybrid_connection_relay_name_node1')), '2021-11-01').userMetadata)[0].value, ':')[1], json('null'))]",
                                "sendKeyName": "defaultSender",
                                "sendKeyValue": "",
                                "serviceBusSuffix": ".servicebus.windows.net"
                            }
                        },
                        {
                            "condition": "[parameters('use_confluent_hybrid_connection')]",
                            "type": "hybridConnectionNamespaces/relays",
                            "name": "[if(parameters('use_confluent_hybrid_connection'), concat(parameters('hybrid_service_bus_namespace'), '/', parameters('hybrid_connection_relay_name_node2')), 'namespace/relay')]",
                            "apiVersion": "2019-08-01",
                            "location": "[resourceGroup().location]",
                            "dependsOn": ["[concat('Microsoft.Web/Sites/', parameters('site_name'), '/slots/', parameters('slot_name'))]"],
                            "properties": {
                                "serviceBusNamespace": "parameters('hybrid_service_bus_namespace')",
                                "relayName": "parameters('hybrid_connection_relay_name_cluster')",
                                "relayArmUri": "[if(parameters('use_confluent_hybrid_connection'), concat(variables('hybridConnectionResourceId'), '/hybridConnections/', parameters('hybrid_connection_relay_name_node2')), json('null'))]",
                                "hostname": "[if(parameters('use_confluent_hybrid_connection'), split(json(reference(concat(variables('hybridConnectionResourceId'), '/hybridConnections/', parameters('hybrid_connection_relay_name_node2')), '2021-11-01').userMetadata)[0].value, ':')[0], json('null'))]",
                                "port": "[if(parameters('use_confluent_hybrid_connection'), split(json(reference(concat(variables('hybridConnectionResourceId'), '/hybridConnections/', parameters('hybrid_connection_relay_name_node2')), '2021-11-01').userMetadata)[0].value, ':')[1], json('null'))]",
                                "sendKeyName": "defaultSender",
                                "sendKeyValue": "",
                                "serviceBusSuffix": ".servicebus.windows.net"
                            }
                        },
                        {
                            "condition": "[parameters('use_confluent_hybrid_connection')]",
                            "type": "hybridConnectionNamespaces/relays",
                            "name": "[if(parameters('use_confluent_hybrid_connection'), concat(parameters('hybrid_service_bus_namespace'), '/', parameters('hybrid_connection_relay_name_node3')), 'namespace/relay')]",
                            "apiVersion": "2019-08-01",
                            "location": "[resourceGroup().location]",
                            "dependsOn": ["[concat('Microsoft.Web/Sites/', parameters('site_name'), '/slots/', parameters('slot_name'))]"],
                            "properties": {
                                "serviceBusNamespace": "parameters('hybrid_service_bus_namespace')",
                                "relayName": "parameters('hybrid_connection_relay_name_cluster')",
                                "relayArmUri": "[if(parameters('use_confluent_hybrid_connection'), concat(variables('hybridConnectionResourceId'), '/hybridConnections/', parameters('hybrid_connection_relay_name_node3')), json('null'))]",
                                "hostname": "[if(parameters('use_confluent_hybrid_connection'), split(json(reference(concat(variables('hybridConnectionResourceId'), '/hybridConnections/', parameters('hybrid_connection_relay_name_node3')), '2021-11-01').userMetadata)[0].value, ':')[0], json('null'))]",
                                "port": "[if(parameters('use_confluent_hybrid_connection'), split(json(reference(concat(variables('hybridConnectionResourceId'), '/hybridConnections/', parameters('hybrid_connection_relay_name_node3')), '2021-11-01').userMetadata)[0].value, ':')[1], json('null'))]",
                                "sendKeyName": "defaultSender",
                                "sendKeyValue": "",
                                "serviceBusSuffix": ".servicebus.windows.net"
                            }
                        },
                        {
                            "condition": "[parameters('use_confluent_hybrid_connection')]",
                            "type": "hybridConnectionNamespaces/relays",
                            "name": "[if(parameters('use_confluent_hybrid_connection'), concat(parameters('hybrid_service_bus_namespace'), '/', parameters('hybrid_connection_relay_name_node4')), 'namespace/relay')]",
                            "apiVersion": "2019-08-01",
                            "location": "[resourceGroup().location]",
                            "dependsOn": ["[concat('Microsoft.Web/Sites/', parameters('site_name'), '/slots/', parameters('slot_name'))]"],
                            "properties": {
                                "serviceBusNamespace": "parameters('hybrid_service_bus_namespace')",
                                "relayName": "parameters('hybrid_connection_relay_name_cluster')",
                                "relayArmUri": "[if(parameters('use_confluent_hybrid_connection'), concat(variables('hybridConnectionResourceId'), '/hybridConnections/', parameters('hybrid_connection_relay_name_node4')), json('null'))]",
                                "hostname": "[if(parameters('use_confluent_hybrid_connection'), split(json(reference(concat(variables('hybridConnectionResourceId'), '/hybridConnections/', parameters('hybrid_connection_relay_name_node4')), '2021-11-01').userMetadata)[0].value, ':')[0], json('null'))]",
                                "port": "[if(parameters('use_confluent_hybrid_connection'), split(json(reference(concat(variables('hybridConnectionResourceId'), '/hybridConnections/', parameters('hybrid_connection_relay_name_node4')), '2021-11-01').userMetadata)[0].value, ':')[1], json('null'))]",
                                "sendKeyName": "defaultSender",
                                "sendKeyValue": "",
                                "serviceBusSuffix": ".servicebus.windows.net"
                            }
                        }
                    ],
                    "dependsOn": ["[resourceId('Microsoft.Web/sites', parameters('site_name'))]"]
                }
            ]
        }
    ]
}
