                                "relayName": "parameters('hybrid_connection_relay_name_cluster')",
                                "relayArmUri": "[if(parameters('use_confluent_hybrid_connection'), concat(variables('hybridConnectionResourceId'), '/hybridConnections/', parameters('hybrid_connection_relay_name_node1')), json('null'))]",
                                "hostname": "[if(parameters('use_confluent_hybrid_connection'), split(json(reference(concat(variables('hybridConnectionResourceId'), '/hybridConnections/', parameters('hybrid_connection_relay_name_node1')), '2021-11-01').userMetadata)[0].value, ':')[0], json('null'))]",
                                "port": "[if(parameters('use_confluent_hybrid_connection'), split(json(reference(concat(variables('hybridConnectionResourceId'), '/hybridConnections/', parameters('hybrid_connection_relay_name_node1')), '2021-11-01').userMetadata)[0].value, ':')[1], json('null'))]",
                                "sendKeyName": "defaultSender",
                                "sendKeyValue": "",
                                "serviceBusSuffix": ".servicebus.windows.net"
                            }
                        },
                        {
                            "condition": "[parameters('use_confluent_hybrid_connection')]",
                            "type": "hybridConnectionNamespaces/relays",
                            "name": "[if(parameters('use_confluent_hybrid_connection'), concat(parameters('hybrid_service_bus_namespace'), '/', parameters('hybrid_connection_relay_name_node2')), 'namespace/relay')]",
                            "apiVersion": "2019-08-01",
                            "location": "[resourceGroup().location]",
                            "dependsOn": [
                                "[concat('Microsoft.Web/Sites/', parameters('site_name'), '/slots/', parameters('slot_name'))]"
                            ],
                            "properties": {
