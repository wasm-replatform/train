{
    "name": "at_dilax_adapter",
    "version": "1.0.0",
    "private": true,
    "description": "AT Dilax Adapter - it listens on Realtime Dilax eventhub and enriches the Dilax message",
    "homepage": "http://www.propellerhead.co.nz",
    "bugs": {
        "url": "https://propellerheadnz.atlassian.net"
    },
    "repository": {
        "type": "git",
        "url": "https://bitbucket.org/Propellerhead/Auckland%20Transport/at_dilax_adapter"
    },
    "license": "UNLICENSED",
    "author": "Propellerhead",
    "main": "dist/src/start.js",
    "scripts": {
        "build": "rimraf ./dist && tsc && npm run build-resource",
        "build-resource": "copyfiles ./.env \"./resource/**/*\" ./dist",
        "cucumber": "mkdirp test-reports/cucumber && nyc --nycrc-path ./cucumber-config/nyc.json cucumber-js --config ./cucumber-config/cucumber.json",
        "dev": "ts-node -r dotenv/config ./src/start.ts",
        "lint": "eslint \"src/**/*.{ts,tsx}\" --no-error-on-unmatched-pattern",
        "lint:fix": "eslint \"{src,test}/**/*.{ts,tsx}\" --no-error-on-unmatched-pattern --fix",
        "start": "cd dist || true && node -r dotenv/config src/start.js",
        "test": "NEW_RELIC_ENABLED=false jest --config node_modules/at-build-common/base/jest.json && npm run cucumber"
    },
    "eslintConfig": {
        "extends": [
            "./node_modules/at-build-common/base/eslint.json"
        ]
    },
    "dependencies": {
        "@azure/identity": "^3.2.4",
        "async-lock": "^1.4.0",
        "at-build-common": "10.3.3",
        "at-realtime-common": "^6.8.15",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "lodash": "^4.17.21",
        "moment-timezone": "^0.5.43",
        "newrelic": "^11.6.0",
        "node-cache": "^5.1.2",
        "node-cron": "^3.0.3"
    },
    "devDependencies": {
        "@cucumber/cucumber": "^10.0.1",
        "@cucumber/pretty-formatter": "^1.0.0",
        "@istanbuljs/nyc-config-typescript": "^1.0.2",
        "@types/async-lock": "^1.4.2",
        "@types/chai": "^4.3.11",
        "@types/cucumber": "^6.0.1",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.10",
        "@types/lodash": "^4.14.202",
        "@types/moment-timezone": "^0.5.30",
        "@types/newrelic": "^9.14.3",
        "@types/node": "^20.10.3",
        "@types/node-cron": "^3.0.11",
        "@types/redis": "^4.0.10",
        "@types/redis-mock": "^0.17.3",
        "@types/uuid": "^9.0.7",
        "@types/ws": "^8.5.10",
        "at-build-common": "^10.3.3",
        "bluebird": "^3.7.2",
        "body-parser": "^1.20.2",
        "chai": "^4.3.10",
        "cucumber": "^5.1.0",
        "cucumber-tsflow": "^4.3.1",
        "jest": "^29.7.0",
        "jest-cli": "^29.7.0",
        "nyc": "^15.1.0",
        "redis-mock": "^0.56.3",
        "utf-8-validate": "^6.0.3"
    },
    "engines": {
        "node": "^18.0.0"
    }
}
