{
    "variables": {
        "hybridConnectionResourceId": "[resourceId(parameters('hybrid_resource_group'), 'Microsoft.Relay/namespaces', parameters('hybrid_service_bus_namespace'))]"
    },
    "resources": [
        {
            "type": "Microsoft.KeyVault/vaults/accessPolicies",
            "name": "[concat(parameters('key_vault'), '/add')]",
            "apiVersion": "2016-10-01",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites/', parameters('site_name'))]",
                "[resourceId('Microsoft.Web/sites/slots', parameters('site_name'), parameters('slot_name'))]"
            ],
            "properties": {
                "accessPolicies": [
                    {
                        "tenantId": "[reference(concat('Microsoft.Web/sites/', parameters('site_name')), '2018-02-01', 'Full').identity.tenantId]",
                        "objectId": "[reference(concat('Microsoft.Web/sites/', parameters('site_name')), '2018-02-01', 'Full').identity.principalId]",
                        "permissions": {
                            "keys": [],
                            "secrets": [
                                "get"
                            ],
                            "certificates": [],
                            "storage": []
                        }
                    },
                    {
                        "tenantId": "[reference(concat('Microsoft.Web/sites/', parameters('site_name'), '/slots/', parameters('slot_name')), '2018-02-01', 'Full').identity.tenantId]",
                        "objectId": "[reference(concat('Microsoft.Web/sites/', parameters('site_name'), '/slots/', parameters('slot_name')), '2018-02-01', 'Full').identity.principalId]",
                        "permissions": {
                            "keys": [],
                            "secrets": [
                                "get"
                            ],
                            "certificates": [],
                            "storage": []
                        }
                    }
                ]
            }
        },
        {
            "name": "[parameters('site_name')]",
            "type": "Microsoft.Web/sites",
            "apiVersion": "2020-12-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "name": "[parameters('site_name')]",
                "serverFarmId": "[parameters('server_farm_id')]"
            },
            "kind": "app",
            "identity": {
                "type": "SystemAssigned"
            },
            "resources": [
                {
                    "apiVersion": "2019-08-01",
                    "name": "virtualNetwork",
                    "type": "networkConfig",
                    "condition": "[greater(length(parameters('vnet_resource_group')), 0)]",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/sites', parameters('site_name'))]"
                    ],
                    "properties": {
                        "subnetResourceId": "[resourceId(parameters('vnet_resource_group'), 'Microsoft.Network/virtualNetworks/subnets', parameters('vnet_name'), parameters('subnet_name'))]",
                        "swiftSupported": true
                    }
                },
                {
                    "apiVersion": "2015-08-01",
                    "name": "slotconfignames",
                    "type": "config",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/sites/', parameters('site_name'))]"
                    ],
                    "properties": {
                        "appSettingNames": [
                            "IS_SLOT"
                        ]
                    }
                },
                {
                    "comments": "[concat('Deployment slot ', parameters('slot_name'))]",
                    "type": "Microsoft.Web/sites/slots",
                    "kind": "app",
                    "identity": {
                        "type": "SystemAssigned"
                    },
                    "name": "[concat(parameters('site_name'), '/', parameters('slot_name'))]",
                    "apiVersion": "2016-08-01",
                    "location": "[resourceGroup().location]",
                    "scale": null,
                    "properties": {
                        "enabled": true,
                        "hostNameSslStates": [
                            {
                                "name": "[concat(parameters('site_name'),'-', parameters('slot_name'),'.azurewebsites.net')]",
                                "sslState": "Disabled",
                                "virtualIP": null,
                                "thumbprint": null,
                                "toUpdate": null,
                                "hostType": "Standard"
                            },
                            {
                                "name": "[concat(parameters('site_name'),'-', parameters('slot_name'),'.scm.azurewebsites.net')]",
                                "sslState": "Disabled",
                                "virtualIP": null,
                                "thumbprint": null,
                                "toUpdate": null,
                                "hostType": "Repository"
                            }
                        ],
                        "serverFarmId": "[parameters('server_farm_id')]",
                        "reserved": false,
                        "httpsOnly": true,
                        "siteConfig": {
                            "minTlsVersion": "1.2",
                            "use32BitWorkerProcess": false,
                            "alwaysOn": true,
                            "healthCheckPath": "/status",
                            "webSocketsEnabled": false,
                            "ipSecurityRestrictions": "[parameters('permitted_ip_range')]",
                            "appSettings": [
                                {
                                    "name": "IS_SLOT",
                                    "value": "true"
                                },
                                {
                                    "name": "WEBSITE_NODE_DEFAULT_VERSION",
                                    "value": "[parameters('node_version')]"
                                },
                                {
                                    "name": "WEBSITE_ADD_SITENAME_BINDINGS_IN_APPHOST_CONFIG",
                                    "value": "1"
                                },
                                {
                                    "name": "WEBSITE_HEALTHCHECK_MAXPINGFAILURES",
                                    "value": "10"
                                },
                                {
                                    "name": "WEBSITE_OVERRIDE_PRESERVE_DEFAULT_STICKY_SLOT_SETTINGS",
                                    "value": "0"
                                },
                                {
                                    "name": "WEBSITE_RUN_FROM_PACKAGE",
                                    "value": "1"
                                },
                                {
                                    "name": "NEW_RELIC_NO_CONFIG_FILE",
                                    "value": "true"
                                },
                                {
                                    "name": "NEW_RELIC_LOG_ENABLED",
                                    "value": "false"
                                },
                                {
                                    "name": "APP_NAME",
                                    "value": "[parameters('site_name')]"
                                },
                                {
                                    "name": "NEW_RELIC_APP_NAME",
                                    "value": "[parameters('new_relic_app_name')]"
                                },
                                {
                                    "name": "NEW_RELIC_LICENSE_KEY",
                                    "value": "[parameters('new_relic_license_key')]"
                                },
                                {
                                    "name": "LOG_LEVEL",
                                    "value": "[parameters('log_level')]"
                                },
                                {
                                    "name": "PAPERTRAIL_SYSTEM",
                                    "value": "[parameters('papertrail_system')]"
                                },
                                {
                                    "name": "SLOT_NAME",
                                    "value": "[parameters('slot_name')]"
                                },
                                {
                                    "name": "KAFKA_HOSTS",
                                    "value": "[parameters('kafka_hosts')]"
                                },
                                {
                                    "name": "KEY_VAULT",
                                    "value": "[parameters('key_vault')]"
                                },
                                {
                                    "name": "KEY_VAULT_SECRET_NAME_CONFLUENT_KEY",
                                    "value": "[parameters('key_vault_secret_name_confluent_key')]"
                                },
                                {
                                    "name": "KEY_VAULT_SECRET_NAME_SCHEMA_REGISTRY_KEY",
                                    "value": "[parameters('key_vault_secret_name_schema_registry_key')]"
                                },
                                {
                                    "name": "SECRET_WATCHER_INTERVAL",
                                    "value": "[parameters('secret_watcher_interval')]"
                                },
                                {
                                    "name": "CONFLUENT_KAFKA_ENVIRONMENT",
                                    "value": "[parameters('confluent_kafka_environment')]"
                                },
                                {
                                    "name": "REPLICATION_ENDPOINT",
                                    "value": "[parameters('replication_endpoint')]"
                                },
                                {
                                    "name": "USE_SCHEMA_REGISTRY_PRODUCER",
                                    "value": "[parameters('use_schema_registry_producer')]"
                                },
                                {
                                    "name": "SCHEMA_REGISTRY_URL",
                                    "value": "[parameters('schema_registry_url')]"
                                }
                            ]
                        },
                        "scmSiteAlsoStopped": false,
                        "hostingEnvironmentProfile": null,
                        "clientAffinityEnabled": true,
                        "clientCertEnabled": false,
                        "hostNamesDisabled": false,
                        "containerSize": 0,
                        "dailyMemoryTimeQuota": 0,
                        "cloningInfo": null
                    },
                    "resources": [
                        {
                            "apiVersion": "2019-08-01",
                            "name": "virtualNetwork",
                            "type": "networkConfig",
                            "condition": "[greater(length(parameters('vnet_resource_group')), 0)]",
                            "dependsOn": [
                                "[concat('Microsoft.Web/Sites/', parameters('site_name'), '/slots/', parameters('slot_name'))]"
                            ],
                            "properties": {
                                "subnetResourceId": "[resourceId(parameters('vnet_resource_group'), 'Microsoft.Network/virtualNetworks/subnets', parameters('vnet_name'), parameters('subnet_name'))]",
                                "swiftSupported": true
                            }
                        },
                        {
                            "condition": "[parameters('use_confluent_hybrid_connection')]",
                            "type": "hybridConnectionNamespaces/relays",
                            "name": "[if(parameters('use_confluent_hybrid_connection'), concat(parameters('hybrid_service_bus_namespace'), '/', parameters('hybrid_connection_relay_name_cluster')), 'namespace/relay')]",
                            "apiVersion": "2019-08-01",
                            "location": "[resourceGroup().location]",
                            "dependsOn": [
                                "[concat('Microsoft.Web/Sites/', parameters('site_name'), '/slots/', parameters('slot_name'))]"
                            ],
                            "properties": {
                                "serviceBusNamespace": "parameters('hybrid_service_bus_namespace')",
                                "relayName": "parameters('hybrid_connection_relay_name_cluster')",
                                "relayArmUri": "[if(parameters('use_confluent_hybrid_connection'), concat(variables('hybridConnectionResourceId'), '/hybridConnections/', parameters('hybrid_connection_relay_name_cluster')), json('null'))]",
                                "hostname": "[if(parameters('use_confluent_hybrid_connection'), split(json(reference(concat(variables('hybridConnectionResourceId'), '/hybridConnections/', parameters('hybrid_connection_relay_name_cluster')), '2021-11-01').userMetadata)[0].value, ':')[0], json('null'))]",
                                "port": "[if(parameters('use_confluent_hybrid_connection'), split(json(reference(concat(variables('hybridConnectionResourceId'), '/hybridConnections/', parameters('hybrid_connection_relay_name_cluster')), '2021-11-01').userMetadata)[0].value, ':')[1], json('null'))]",
                                "sendKeyName": "defaultSender",
                                "sendKeyValue": "",
                                "serviceBusSuffix": ".servicebus.windows.net"
                            }
                        },
